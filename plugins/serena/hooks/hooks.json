{
  "description": "Serena MCP integration hooks for auto-activation and think tool reminders",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/session-start-activate.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__plugin_serena_serena__find_symbol|mcp__plugin_serena_serena__find_referencing_symbols|mcp__plugin_serena_serena__search_for_pattern|mcp__plugin_serena_serena__get_symbols_overview",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/think-after-research.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "mcp__plugin_serena_serena__replace_symbol_body|mcp__plugin_serena_serena__replace_content|mcp__plugin_serena_serena__insert_after_symbol|mcp__plugin_serena_serena__insert_before_symbol",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/think-before-edit.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
